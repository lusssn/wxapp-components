.cpnt-radio {
  font-size: 16px;
  color: #212121;
  line-height: 23px;
}

.cpnt-radio-item {
  position: relative;
  padding: 10px 0 10px 33px;
}

.cpnt-radio-item::before {
  position: absolute;
  top: 50%;
  left: 0;
  width: 21px;
  height: 21px;
  margin-top: -12px;
  content: "";
  border: 1px solid #C7C7C7;
  border-radius: 50%;
}

.cpnt-radio-icon {
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -12px;
}
