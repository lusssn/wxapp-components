.swiper-menu {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  white-space: nowrap;
}

.swiper-menu-part {
  position: relative;
  display: inline-block;
  height: 100%;
  vertical-align: top;
}

.swiper-menu-menu {
  overflow-x: visible;
  overflow-y: scroll;
  background-color: #EF4945;
}

.swiper-menu-content {
  width: 100%;
  background-color: #C7C7C7;
}

.swiper-menu-btn-switch {
  position: fixed;
  top: 0;
  z-index: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 40px;
  height: 40px;
  transition: left .3s ease-out;
  background-color: #EF4945;
}

.swiper-menu-btn-switch .line {
  width: 28px;
  height: 3px;
  margin: 0 auto 7px;
  transition: all .3s ease-in-out;
  transition-delay: .4s;
  transform-origin: left;
  background-color: white;
}

.swiper-menu-btn-switch .line:last-child {
  margin-bottom: 0;
}

.swiper-menu-btn-switch.unfold .line:first-child {
  transform: translateX(4px) rotate(45deg);
}

.swiper-menu-btn-switch.unfold .line:nth-child(2) {
  opacity: 0;
}

.swiper-menu-btn-switch.unfold .line:last-child {
  transform: translateX(4px) rotate(-45deg);
}
