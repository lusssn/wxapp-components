.swiper-scale {
  width: 100%;
  overflow: hidden;
}

.swiper-scale-inner {
  position: relative;
}

.swiper-scale-wrap {
  position: absolute;
  white-space: nowrap;
}

.swiper-scale-item {
  display: inline-block;
  box-sizing: border-box;
  transition: transform linear .4s;
  border-radius: 8px;
  background-color: white;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
}
